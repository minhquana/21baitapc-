#include <iostream>
using namespace std;

// Hàm tìm kiếm nhị phân
int timKiemNhiPhan(int arr[], int low, int high, int x) {
    if (high >= low) {
        int mid = (low + high) / 2;
        // Nếu phần tử ở giữa bằng x, trả về vị trí của phần tử đó
        if (arr[mid] == x)
            return mid;
        // Nếu phần tử ở giữa lớn hơn x, tìm kiếm trong nửa đầu mảng
        else if (arr[mid] > x)
            return timKiemNhiPhan(arr, low, mid - 1, x);
        // Nếu phần tử ở giữa nhỏ hơn x, tìm kiếm trong nửa sau mảng
        else
            return timKiemNhiPhan(arr, mid + 1, high, x);
    }
    // Nếu không tìm thấy x trong mảng, trả về -1
    return -1;
}

int main() {
    int arr[] = {2, 3, 4, 10, 40};
    int n = sizeof(arr) / sizeof(arr[0]);
    int x = 10;
    int result = timKiemNhiPhan(arr, 0, n - 1, x);
    if (result == -1)
        cout << "Khong tim thay " << x << " trong mang";
    else
        cout << x << " duoc tim thay tai vi tri " << result;
    return 0;
}
