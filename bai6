#include <iostream>

// Hàm hoán đổi giá trị của hai phần tử
void swap(int* a, int* b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

// Hàm phân chia mảng và đưa phần tử chốt (pivot) đến vị trí đúng
int partition(int arr[], int low, int high) {
    int pivot = arr[high];  // Chọn phần tử chốt là phần tử cuối cùng
    int i = low - 1;        // Chỉ số của phần tử nhỏ hơn pivot

    for (int j = low; j <= high - 1; j++) {
        // Nếu phần tử hiện tại nhỏ hơn hoặc bằng pivot
        if (arr[j] <= pivot) {
            i++;
            swap(&arr[i], &arr[j]);
        }
    }
    swap(&arr[i + 1], &arr[high]);
    return (i + 1);
}

// Hàm sắp xếp quick sort
void quickSort(int arr[], int low, int high) {
    if (low < high) {
        // Phân chia mảng và lấy chỉ số của phần tử chốt
        int pi = partition(arr, low, high);

        // Sắp xếp các phần tử trước và sau phần tử chốt
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}

int main() {
    int n;
    std::cout << "Nhap so phan tu cua mang: ";
    std::cin >> n;

    int arr[n];
    std::cout << "Nhap cac phan tu cua mang: ";
    for (int i = 0; i < n; i++) {
        std::cin >> arr[i];
    }

    heapSort(arr, n);

    std::cout << "Mãng đã sắp xếp: ";
    for (int i = 0; i < n; i++) {
        std::cout << arr[i] << " ";
    }

    return 0;
}
